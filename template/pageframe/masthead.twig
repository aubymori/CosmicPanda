{% from "macros/alerts.twig" import render as alert %}
<div id="masthead" dir="ltr">
    <a href="/" id="logo-container">
        <img id="logo" src="//s.ytimg.com/yts/img/pixel-vfl3z5WfW.gif" alt="YouTube home">
    </a>
    <div id="masthead-user-bar-container">
        <div id="masthead-user-bar">
            <div id="masthead-user">
                <div id="masthead-user-display">
                    <a href="/signup" class="start">Create Account</a>
                    <span class="masthead-link-separator">|</span>
                    <a href="//accounts.google.com/ServiceLogin?continue=https://www.youtube.com/signin" class="end">Sign In</a>
                </div>
            </div>
        </div>
    </div>
    <div id="masthead-search-bar-container">
        <div id="masthead-search-bar">
            <div id="masthead-nav">
                <a href="/videos">Browse</a>
                <span class="masthead-link-separator">|</span>
                <a href="/movies">Movies</a>
                <span class="masthead-link-separator">|</span>
                <a href="/my_videos_upload" id="masthead-upload-link">Upload</a>
            </div>
            <form action="/results" id="masthead-search" class="search-form consolidated-form" onsubmit="if (_gel('masthead-search-term').value == '') return false;">
                <button id="search-btn" class="search-btn-compontent search-button yt-uix-button yt-uix-button-default" onclick="if (_gel('masthead-search-term').value == '') return false; _gel('masthead-search').submit(); return false;;return true;" type="submit" tabindex="2">
                    <span class="yt-uix-button-content">Search</span>
                </button>
                <div id="masthead-search-terms" class="masthead-search-terms-border">
                    <label>
                        <input type="text" id="masthead-search-term" class="search-term" autocomplete="off" name="search_query">
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>
<div id="alerts">
    {% for item in yt.alerts %}
        {{ alert(item) }}
    {% endfor %}
</div>